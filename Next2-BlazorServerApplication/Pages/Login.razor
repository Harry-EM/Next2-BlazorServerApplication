@page "/Login"
@layout LoginLayout
	<div class="centre-content container-centre margin-t-50">
    <h1>Log In</h1>
    <p class="margin-t-50">Enter the email address and password you used to create your profile. Once your identity is confirmed, you will be able to manage your profile.</p>
    <label class="required-field margin-t-50">Email Address:</label>
    <InputText class="auth-input" @bind-Value="@username"></InputText>
    <label class="required-field">Password:</label>
    <InputText class="auth-input" @bind-Value="@password"></InputText>
    <a href="Register" class="margin-t-50 auth-a">Don't have an account? <span style="text-decoration:underline; font-weight:bold;">Create one</span></a>
    <div class="container-space-between height-100">
        <button class="white-button margin-t-50"><i class="fa-solid fa-caret-left"></i> Back</button>
        <button class="white-button margin-t-50">Log in <i class="fa-solid fa-caret-right"></i></button>
    </div>
</div>


@code {
	private string username;
	private string password;

}
